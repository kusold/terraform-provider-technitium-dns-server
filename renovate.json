{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for Terraform Provider Technitium DNS Server",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":automergeDigest"
  ],
  "timezone": "America/Denver",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "kusold"
  ],
  "reviewers": [
    "kusold"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "golang"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Group Go dependencies by type",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "require"
      ],
      "groupName": "go dependencies"
    },
    {
      "description": "Group HashiCorp Terraform packages",
      "matchManagers": [
        "gomod"
      ],
      "groupName": "terraform framework",
      "reviewers": [
        "kusold"
      ],
      "labels": [
        "terraform",
        "dependencies"
      ],
      "matchPackageNames": [
        "/^github.com/hashicorp/terraform-/"
      ]
    },
    {
      "description": "Nix flake inputs",
      "matchManagers": [
        "nix"
      ],
      "matchFileNames": [
        "flake.nix",
        "flake.lock"
      ],
      "groupName": "nix flake inputs",
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": true,
      "labels": [
        "nix",
        "dependencies"
      ]
    },
    {
      "description": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions",
      "automerge": true,
      "labels": [
        "github-actions",
        "dependencies"
      ]
    },
    {
      "description": "Pin Go version updates",
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "rangeStrategy": "pin",
      "labels": [
        "go-version",
        "dependencies"
      ],
      "reviewers": [
        "kusold"
      ]
    },
    {
      "description": "Major version updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update",
        "dependencies"
      ],
      "reviewers": [
        "kusold"
      ],
      "prPriority": 10
    },
    {
      "description": "Security updates get high priority",
      "vulnerabilityAlerts": {
        "labels": [
          "security",
          "dependencies"
        ],
        "prPriority": 20,
        "automerge": false,
        "reviewers": [
          "kusold"
        ]
      },
      "matchPackageNames": [
        "/.*/"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "reviewers": [
      "kusold"
    ],
    "prPriority": 20
  },
  "osvVulnerabilityAlerts": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on monday"
    ],
    "automerge": true
  },
  "ignoreDeps": [],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Go version in Dockerfile and CI files",
      "managerFilePatterns": [
        "/(^|/)Dockerfile$/",
        "/\\.ya?ml$/"
      ],
      "matchStrings": [
        "go\\s+(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "golang-version"
    }
  ]
}
