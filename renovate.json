{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for Terraform Provider Technitium DNS Server",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "timezone": "America/New_York",
  "schedule": ["before 6am on monday"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "assignees": ["kusold"],
  "reviewers": ["kusold"],
  "packageRules": [
    {
      "description": "Group Go dependencies by type",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["require"],
      "groupName": "go dependencies",
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Group HashiCorp Terraform packages",
      "matchManagers": ["gomod"],
      "matchPackagePatterns": ["^github.com/hashicorp/terraform-"],
      "groupName": "terraform framework",
      "schedule": ["before 6am on monday"],
      "reviewers": ["kusold"],
      "labels": ["terraform", "dependencies"]
    },
    {
      "description": "Group testing dependencies",
      "matchManagers": ["gomod"],
      "matchPackagePatterns": [
        "^github.com/stretchr/testify",
        "^github.com/testcontainers/testcontainers-go"
      ],
      "groupName": "testing dependencies",
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Nix flake inputs",
      "matchManagers": ["nix"],
      "matchFileNames": ["flake.nix", "flake.lock"],
      "groupName": "nix flake inputs",
      "schedule": ["before 6am on monday"],
      "automerge": true,
      "labels": ["nix", "dependencies"]
    },
    {
      "description": "GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "github actions",
      "schedule": ["before 6am on monday"],
      "automerge": true,
      "labels": ["github-actions", "dependencies"]
    },
    {
      "description": "Pin Go version updates",
      "matchManagers": ["gomod"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "pin",
      "labels": ["go-version", "dependencies"],
      "reviewers": ["kusold"]
    },
    {
      "description": "Major version updates require manual review",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update", "dependencies"],
      "reviewers": ["kusold"],
      "prPriority": 10
    },
    {
      "description": "Security updates get high priority",
      "matchPackagePatterns": [".*"],
      "vulnerabilityAlerts": {
        "labels": ["security", "dependencies"],
        "prPriority": 20,
        "automerge": false,
        "reviewers": ["kusold"]
      }
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"],
    "reviewers": ["kusold"],
    "prPriority": 20
  },
  "osvVulnerabilityAlerts": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "separateMinorPatch": false,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "deps",
  "semanticCommitScope": null,
  "commitMessagePrefix": "deps:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "deps: update {{depName}} to {{newVersion}}",
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}",
  "prBodyColumns": [
    "Package",
    "Type",
    "Update",
    "Change"
  ],
  "prBodyNotes": [
    "This PR was automatically generated by Renovate Bot.",
    "Please review the changes carefully before merging.",
    "Ensure all tests pass before merging this PR."
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"],
    "commitMessageAction": "update",
    "commitMessageTopic": "lock files",
    "prTitle": "deps: update lock files",
    "automerge": true
  },
  "golang": {
    "minimumReleaseAge": "3 days"
  },
  "ignoreDeps": [],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/test/**",
    "**/tests/**",
    "**/*.md"
  ],
  "regexManagers": [
    {
      "description": "Update Go version in Dockerfile and CI files",
      "fileMatch": ["(^|/)Dockerfile$", "\\.ya?ml$"],
      "matchStrings": [
        "go\\s+(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)"
      ],
      "depNameTemplate": "golang",
      "datasourceTemplate": "golang-version"
    }
  ]
}